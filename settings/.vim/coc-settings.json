{
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt", ".git/"],
      "filetypes": ["scala", "sbt"]
    }
  },
  "diagnostic.displayByAle": true,
  "suggest.autoTrigger": "trigger",
  "typescript.preferences.noSemicolons": true,
  "javascript.preferences.noSemicolons": true
}
